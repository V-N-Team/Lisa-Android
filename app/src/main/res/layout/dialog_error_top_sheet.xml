<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/errorBgColor">

    <TextView
        android:id="@+id/top_sheet_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/top_sheet_error_close_icon"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:layout_toLeftOf="@+id/top_sheet_error_close_icon" />

    <ImageButton
        android:id="@+id/top_sheet_error_close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_medium_small"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_close_2"
        android:tint="@color/white" />
</RelativeLayout>