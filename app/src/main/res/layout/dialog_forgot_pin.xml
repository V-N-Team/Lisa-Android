<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_forgot_pin_icon_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_forgot_pin_icon_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_forgot_pin_icon_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <TextView
                android:id="@+id/forgot_pin_text_first"
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_smaller"
                android:text="@string/forgot_your_pin"
                android:textSize="@dimen/text_size_medium_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_pin_close" />

            <TextView
                android:id="@+id/forgot_pin_text_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_smaller"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="@string/for_pin_reset_or_for_assistance_please_contact_us"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/forgot_pin_text_first" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_smaller"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/start_vertical_gl"
                app:layout_constraintRight_toLeftOf="@id/end_vertical_gl"
                app:layout_constraintTop_toBottomOf="@id/forgot_pin_text_second">

                <LinearLayout
                    android:id="@+id/forgot_pin_call_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginLeft="@dimen/margin_medium_smaller"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_call_center" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/forgot_pin_call_center_value"
                            style="@style/ForgotPinItemStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:gravity="start"
                            android:text="@string/_888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/forgot_pin_call_center_value"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_medium_smaller"
                            android:text="@string/call_center" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_smaller"
                            android:layout_marginRight="@dimen/margin_medium_smaller"
                            app:srcCompat="@drawable/ic_arrow_right" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forgot_pin_whats_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginLeft="@dimen/margin_medium_smaller"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_whats_up" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/forgot_pin_whats_app_value"
                            style="@style/ForgotPinItemStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:gravity="start"
                            android:text="@string/_509_3888_1000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/forgot_pin_whats_app_value"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_medium_smaller"
                            android:text="@string/whatsapp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_smaller"
                            android:layout_marginRight="@dimen/margin_medium_smaller"
                            app:srcCompat="@drawable/ic_arrow_right" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forgot_pin_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginLeft="@dimen/margin_medium_smaller"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_facebook" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/forgot_pin_facebook_value"
                            style="@style/ForgotPinItemStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:gravity="start"
                            android:text="@string/lisalottoht" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/forgot_pin_facebook_value"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_medium_smaller"
                            android:text="@string/facebook_messenger" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_smaller"
                            android:layout_marginRight="@dimen/margin_medium_smaller"
                            app:srcCompat="@drawable/ic_arrow_right" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forgot_pin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginLeft="@dimen/margin_medium_smaller"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_email" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/forgot_pin_email_value"
                            style="@style/ForgotPinItemStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:gravity="start"
                            android:text="@string/customercare_lisa_ht" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/forgot_pin_email_value"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="@dimen/margin_medium_smaller"
                            android:layout_marginLeft="@dimen/margin_medium_smaller"
                            android:layout_marginBottom="@dimen/margin_medium_smaller"
                            android:text="@string/email" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_smaller"
                            android:layout_marginRight="@dimen/margin_medium_smaller"
                            app:srcCompat="@drawable/ic_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_vertical_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.00" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_vertical_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1" />

            <ImageButton
                android:id="@+id/forgot_pin_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_smaller"
                android:layout_marginEnd="@dimen/margin_medium_smaller"
                android:layout_marginRight="@dimen/margin_medium_smaller"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/end_vertical_gl"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
