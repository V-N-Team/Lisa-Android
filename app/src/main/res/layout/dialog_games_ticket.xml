<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium_small"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/games_ticket_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/margin_medium_smaller"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/games_ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_smaller"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center"
            android:textColor="@color/buttonOrange"
            android:textSize="@dimen/text_size_larger" />

        <TextView
            android:id="@+id/games_ticket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium_smaller_16dp"
            android:gravity="center"
            android:text="@string/the_ticket_list_for_the_combo_combination"
            android:textSize="@dimen/text_size_medium_15sp" />

        <GridView
            android:id="@+id/games_ticket_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:horizontalSpacing="@dimen/margin_small_8dp"
            android:numColumns="2"
            android:paddingHorizontal="20dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/margin_small_8dp" />

        <Button
            android:id="@+id/games_ticket_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_large_small"
            android:layout_marginBottom="@dimen/margin_medium_small"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="18dp"
            android:text="@string/confirm"
            android:textSize="@dimen/text_size_medium"
            app:backgroundTint="@color/buttonOrange" />
    </LinearLayout>
</androidx.cardview.widget.CardView>