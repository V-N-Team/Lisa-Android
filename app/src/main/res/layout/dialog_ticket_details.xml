<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_medium_small"
    android:paddingTop="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lotto_ball_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_smaller_3dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lotto_ball_1_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_smaller_3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/text_size_smaller_11sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:layout_below="@id/lotto_ball_1_number"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shadow_loto"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lotto_ball_1_number" />

                <ImageView
                    android:id="@+id/quickpick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/ic_quickpick_orange" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lotto_ball_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_smaller_3dp"
            android:layout_marginVertical="@dimen/margin_small"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lotto_ball_2_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size_smaller_11sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shadow_loto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lotto_ball_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_smaller_3dp"
            android:layout_marginVertical="@dimen/margin_small"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lotto_ball_3_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size_smaller_11sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shadow_loto" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ticket_options_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/padding_smaller">

            <TextView
                android:id="@+id/ticket_options_opt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_smaller"
                android:background="@drawable/opt_orange_bg"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:paddingVertical="1dp"
                android:paddingStart="@dimen/padding_smaller_6dp"
                android:paddingEnd="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="opt"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_smaller"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/buttonLightOrange"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/ticket_options_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingHorizontal="4dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_smaller" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/ticket_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end|center_vertical">


            <LinearLayout
                android:id="@+id/ticket_win_amount_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small">

                <TextView
                    android:id="@+id/ticket_win_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingBottom="@dimen/padding_smaller"
                    android:text=""
                    android:textColor="@color/greenJackpotColor"
                    android:textSize="@dimen/text_size_medium_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/g_"
                    android:textAllCaps="true"
                    android:textColor="@color/greenJackpotColor"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ticket_status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingBottom="@dimen/padding_smaller"
                app:srcCompat="@drawable/ic_accepted" />

            <ImageButton
                android:id="@+id/ticket_details_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingHorizontal="@dimen/padding_smaller"
                android:paddingVertical="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_smaller"
                app:srcCompat="@drawable/ic_arrow_up" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ticket_accepted_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_medium_smaller">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticket_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium_small" />

            <TextView
                android:id="@+id/ticket_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium_smaller"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_smaller"
            android:gravity="center">

            <TextView
                android:id="@+id/ticket_purchased_with_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/purchased_with"
                android:textColor="@color/walletGrey"
                android:textSize="@dimen/text_size_medium_small" />

            <ImageView
                android:id="@+id/ticket_purchased_with_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium_smaller"
                app:srcCompat="@drawable/ic_wallet"
                app:tint="@color/inactive" />
        </LinearLayout>

        <TextView
            android:id="@+id/ticket_purchased_with_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_smaller"
            android:text="{:XXXX:} BONIS {:XXXX:} LISA {:XXXX:} DIGICEL"
            android:textColor="@color/walletGrey"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/ticket_win_amount_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="@dimen/padding_smaller"
            android:text=""
            android:textColor="@color/greenJackpotColor"
            android:textSize="@dimen/text_size_medium_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/ticket_not_accepted_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium_smaller"
        android:fontFamily="@font/roboto_medium"
        android:text=""
        android:textColor="@color/walletGrey"
        android:textSize="@dimen/text_size_medium_small" />

</LinearLayout>