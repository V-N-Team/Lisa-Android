<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBg"
            tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/game_result_details_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/game_result_details_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/game_result_details_back_arrow_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.06" />

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toEndOf="@+id/game_result_details_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/game_result_details_back_arrow_guideline"
                app:srcCompat="@drawable/ic_back_arrow" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/game_result_details_card_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.13" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/game_result_details_card_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/game_result_details_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/game_result_details_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/game_result_details_card_top_guideline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lotto_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium_smaller"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/walletGrey"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/day_draw_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium_smaller"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_medium_small" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium_smaller">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            app:srcCompat="@drawable/ic_sun" />

                        <LinearLayout
                            android:id="@+id/day_number_layout_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_day" />

                                <TextView
                                    android:id="@+id/day_number_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />

                            </FrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/day_number_layout_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_day" />


                                <TextView
                                    android:id="@+id/day_number_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/day_number_layout_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_day" />

                                <TextView
                                    android:id="@+id/day_number_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/evening_draw_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium_smaller"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_medium_small" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium_smaller">

                        <ImageView
                            android:id="@+id/evening_image_home"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            android:src="@drawable/ic_evening_draw"
                            android:tint="@color/eveningColor" />

                        <LinearLayout
                            android:id="@+id/evening_number_layout_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_evening" />

                                <TextView
                                    android:id="@+id/evening_number_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />

                            </FrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/evening_number_layout_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_evening" />


                                <TextView
                                    android:id="@+id/evening_number_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/evening_number_layout_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_lotto_evening" />

                                <TextView
                                    android:id="@+id/evening_number_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/night_draw_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium_smaller"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_medium_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium_smaller">

                        <ImageView
                            android:id="@+id/night_image_home"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_small"
                            app:srcCompat="@drawable/ic_moon" />

                        <LinearLayout
                            android:id="@+id/night_number_layout_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:layout_marginStart="@dimen/margin_small_8dp"
                            android:layout_marginLeft="@dimen/margin_small_8dp"
                            android:layout_marginEnd="@dimen/margin_smaller_7dp"
                            android:layout_marginRight="@dimen/margin_smaller_7dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_night_lotto" />

                                <TextView
                                    android:id="@+id/night_number_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/night_number_layout_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_night_lotto" />

                                <TextView
                                    android:id="@+id/night_number_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />

                            </FrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/night_number_layout_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/margin_smaller_7dp"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_night_lotto" />

                                <TextView
                                    android:id="@+id/night_number_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/darkGrey"
                                    android:textSize="@dimen/text_size_smaller_11sp" />
                            </FrameLayout>


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shadow_loto" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:layout_marginBottom="@dimen/margin_medium_smaller"
                        android:background="@color/inactiveBG" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/details"
                        android:textColor="@color/walletGrey"
                        android:textSize="@dimen/text_size_medium" />

                    <include
                        android:id="@+id/item_boloto_details"
                        layout="@layout/item_boloto_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_lottojr_details"
                        layout="@layout/item_lottojr_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_lotto_5_royal_details"
                        layout="@layout/item_lotto_5_royal_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_mariage_details"
                        layout="@layout/item_mariage_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_combo_details"
                        layout="@layout/item_combo_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_draw_options_details"
                        layout="@layout/item_draw_options_details"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/item_bolet_details"
                        layout="@layout/item_bolet_details"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/game_result_details_card_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>