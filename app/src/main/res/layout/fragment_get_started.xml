<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/get_started_bg_2"
        app:layout_constraintBottom_toBottomOf="@id/get_started_bottom_image_guideline"
        app:layout_constraintLeft_toLeftOf="@id/get_started_left_guideline"
        app:layout_constraintRight_toRightOf="@id/get_started_right_guideline"
        app:layout_constraintTop_toTopOf="@id/get_started_top_image_guideline" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/main_logo"
        app:layout_constraintBottom_toBottomOf="@+id/get_started_top_image_guideline"
        app:layout_constraintLeft_toLeftOf="@id/get_started_left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_bottom_image_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.485" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_top_image_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_top_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <TextView
        style="@style/TitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/the_best_way_to_play"
        android:textColor="@color/buttonOrange"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/get_started_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/get_started_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/get_started_top_title_guideline" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_top_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/play_and_win_your_favorite_lottery_games"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/get_started_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/get_started_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/get_started_top_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_bottom_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_top_button_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_shadow"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/get_started_bottom_button_guideline"
        app:layout_constraintEnd_toStartOf="@+id/get_started_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/get_started_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/get_started_top_button_guideline">

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button_orange_2"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/get_started"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />
    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/get_started_bottom_button_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
