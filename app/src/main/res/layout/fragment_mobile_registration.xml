<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_back_arrow_guideline"
        app:srcCompat="@drawable/ic_back_arrow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_logo_bot_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/mobile_registration_logo_bot_guideline"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_logo_guideline"
        app:srcCompat="@drawable/ic_mobile_registration" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <TextView
        style="@style/TitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/confirm_your_number"
        android:textScaleX="1.05"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_title_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/enter_your_mobile_number_we_will_send_n_you_otp_to_verify_later"
        android:textSize="@dimen/text_size_medium_15sp"
        app:autoSizeMaxTextSize="@dimen/text_size_medium_15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_text_guideline" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium_smaller"
        android:gravity="center"
        android:text="@string/information_requested_once"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/mobile_registration_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.14" />

            <ht.lisa.app.ui.component.PhoneEditView
                android:id="@+id/mobile_registration_number_edittext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/mobile_registration_card_inner_central_guideline"
                app:layout_constraintEnd_toStartOf="@+id/mobile_registration_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/mobile_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/mobile_registration_card_inner_top_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_card_inner_central_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/mobile_registration_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_is_invalid"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/mobile_registration_card_inner_top_guideline"
                app:layout_constraintStart_toStartOf="@+id/mobile_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />

            <Button
                android:id="@+id/mobile_registration_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_grey"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/get_code"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/mobile_registration_button_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/mobile_registration_card_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/mobile_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/mobile_registration_card_middle_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mobile_registration_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.86" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mobile_registration_change_phone_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <TextView
        android:id="@+id/mobile_registration_change_phone_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/change_your_phone_number_in_0_30"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_medium_small"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/mobile_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/mobile_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/mobile_registration_change_phone_top_guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>