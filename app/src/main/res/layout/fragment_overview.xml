<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ht.lisa.app.ui.registration.OverviewFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_overview_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_overview_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/main_logo"
        app:layout_constraintEnd_toEndOf="@id/right_overview_guideline"
        app:layout_constraintStart_toStartOf="@id/overview_screen_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_overview_logo_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_overview_logo_guideline"/>

    <TextView
        android:id="@+id/overview_screen_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="@id/overview_screen_right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_overview_logo_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_overview_logo_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_overview_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_overview_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/advertisement"
        app:layout_constraintEnd_toEndOf="@id/overview_screen_right_guideline"
        app:layout_constraintStart_toStartOf="@id/overview_screen_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_overview_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/middle_overview_logo_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_overview_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_overview_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <TextView
        android:id="@+id/textView"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum_dolor"
        android:textColor="@color/buttonOrange"
        android:textSize="@dimen/text_size_medium_17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/middle_overview_text_guideline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sit_amet_consectetur_adipiscing_elit"
        android:textSize="@dimen/text_size_medium_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/overview_logo_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_tabs_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/overview_tabs_guideline" />

    <Button
        android:id="@+id/overview_screen_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_orange_2"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/overview_screen_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/overview_screen_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/overview_screen_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/overview_screen_top_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_screen_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_screen_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_screen_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/overview_screen_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89" />

</androidx.constraintlayout.widget.ConstraintLayout>
