<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBg"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/pincode_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/pincode_registration_back_arrow_guideline"
        app:srcCompat="@drawable/ic_back_arrow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/pincode_registration_logo_bot_guideline"
        app:layout_constraintEnd_toStartOf="@+id/pincode_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/pincode_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/pincode_registration_logo_guideline"
        app:srcCompat="@drawable/ic_pincode_registration" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_logo_bot_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <LinearLayout
        android:id="@+id/pincode_registration_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/pincode_registration_text_guideline"
        app:layout_constraintEnd_toEndOf="@+id/pincode_registration_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/pincode_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/pincode_registration_title_guideline">

        <TextView
            android:id="@+id/pincode_registration_title"
            style="@style/TitleTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textAlignment="center"
            android:textScaleX="1.05"
            app:autoSizeMaxTextSize="@dimen/text_size_big_21sp"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:id="@+id/pincode_registration_existing_pin_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="@dimen/margin_smaller_3dp"
            android:layout_marginLeft="@dimen/margin_smaller_3dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_info" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:id="@+id/pincode_registration_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_medium_15sp"
        app:autoSizeMaxTextSize="@dimen/text_size_medium_15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/pincode_registration_card_top_guideline"
        app:layout_constraintEnd_toStartOf="@+id/pincode_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/pincode_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/pincode_registration_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/pincode_registration_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/pincode_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/pincode_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/pincode_registration_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.76" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.14" />

            <LinearLayout
                android:id="@+id/pin_code_registration_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/pincode_registration_card_middle_guideline"
                app:layout_constraintEnd_toStartOf="@+id/pincode_registration_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/pincode_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/pincode_registration_card_inner_top_guideline">

                <ht.lisa.app.ui.component.PinView
                    android:id="@+id/pinView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.46" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_button_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.86" />

            <Button
                android:id="@+id/pincode_registration_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_grey"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/continue_"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/pincode_registration_button_bottom_guideline"
                app:layout_constraintEnd_toEndOf="@+id/pincode_registration_button_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/pincode_registration_button_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/pincode_registration_button_top_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_button_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pincode_registration_button_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <TextView
                android:id="@+id/error_pin_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/invalid_pincode_you_have"
                android:textColor="@color/error"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pincode_registration_button_top_guideline" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_small_8dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingVertical="@dimen/padding_small"
            android:text="@string/sign_out"
            android:textColor="@color/red"
            app:drawableLeftCompat="@drawable/ic_log_out" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pincode_registration_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />
</androidx.constraintlayout.widget.ConstraintLayout>
