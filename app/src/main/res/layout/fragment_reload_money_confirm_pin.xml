<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back_arrow"
        app:layout_constraintStart_toEndOf="@+id/reload_money_confirm_pin_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_back_arrow_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pincode_registration"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_confirm_pin_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_confirm_pin_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_logo_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <TextView
        android:id="@+id/reload_money_confirm_pin_title"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_pin_code"
        android:textScaleX="1.05"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_confirm_pin_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_confirm_pin_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_title_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:id="@+id/reload_money_confirm_pin_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/create_your_secured_pin_code_to_hold_n_your_account_safe"
        android:textSize="@dimen/text_size_medium_15sp"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_confirm_pin_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_confirm_pin_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/reload_money_confirm_pin_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_confirm_pin_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_confirm_pin_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_confirm_pin_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_confirm_pin_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.76" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_confirm_pin_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.43" />

            <LinearLayout
                android:id="@+id/pin_code_registration_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/reload_money_confirm_pin_card_middle_guideline"
                app:layout_constraintEnd_toStartOf="@+id/reload_money_confirm_pin_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/reload_money_confirm_pin_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_card_inner_top_guideline">

                <ht.lisa.app.ui.component.PinView
                    android:id="@+id/pinView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_confirm_pin_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_confirm_pin_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <TextView
                android:id="@+id/error_pin_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invalid_pincode_you_have"
                android:textColor="@color/error"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/reload_money_confirm_pin_button_bottom_guideline" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_confirm_pin_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />
</androidx.constraintlayout.widget.ConstraintLayout>
