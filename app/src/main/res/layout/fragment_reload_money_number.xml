<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back_arrow"
        app:layout_constraintStart_toEndOf="@+id/reload_money_number_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_number_back_arrow_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_mon_cash"
        app:layout_constraintBottom_toBottomOf="@+id/reload_money_number_logo_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_number_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_number_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_number_logo_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_logo_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <ht.lisa.app.ui.component.AutoResizeTextView
        style="@style/TitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/enter_your_mon_cash_number"
        android:textScaleX="1.05"
        app:layout_constraintBottom_toTopOf="@+id/reload_money_number_text_guideline"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_number_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_number_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_number_title_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/the_existing_lisa_pin_is_a"
        android:textSize="@dimen/text_size_medium_15sp"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_number_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_number_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_number_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/reload_money_number_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_number_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_number_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_number_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.14" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_card_inner_central_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <ht.lisa.app.ui.component.PhoneEditView
                android:id="@+id/reload_money_number_number_edittext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/reload_money_number_card_inner_central_guideline"
                app:layout_constraintEnd_toStartOf="@+id/reload_money_number_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/reload_money_number_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/reload_money_number_card_inner_top_guideline" />

            <TextView
                android:id="@+id/reload_money_number_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_is_invalid"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/reload_money_number_card_inner_top_guideline"
                app:layout_constraintStart_toStartOf="@+id/reload_money_number_card_left_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />

            <Button
                android:id="@+id/reload_money_number_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_grey"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/continue_"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/reload_money_number_button_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/reload_money_number_card_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/reload_money_number_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/reload_money_number_card_middle_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_number_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.86" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_number_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>
