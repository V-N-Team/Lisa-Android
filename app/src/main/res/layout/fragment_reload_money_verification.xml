<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back_arrow"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_back_arrow_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_verification_registration"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_logo_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <TextView
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification"
        android:textScaleX="1.05"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_title_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:id="@+id/reload_money_verification_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enter_confirmation_code_hold_tight_n_this_might_take_a_minute"
        android:textSize="@dimen/text_size_medium_15sp"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/reload_money_verification_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <TextView
                android:id="@+id/reload_money_verification_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmation_code_is_invalid"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/reload_money_verification_card_inner_top_guideline"
                app:layout_constraintStart_toStartOf="@+id/reload_money_verification_card_left_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.32" />

            <ht.lisa.app.ui.component.VerificationCodeEditView
                android:id="@+id/reload_money_verification_code_edit_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/reload_money_verification_code_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/reload_money_verification_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/reload_money_verification_card_inner_top_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_code_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.66" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/reload_money_verification_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.86" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reload_money_verification_resend_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <TextView
        android:id="@+id/reload_money_verification_resend_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/re_send_code_in"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toStartOf="@+id/reload_money_verification_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/reload_money_verification_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/reload_money_verification_resend_middle_guideline" />
</androidx.constraintlayout.widget.ConstraintLayout>
