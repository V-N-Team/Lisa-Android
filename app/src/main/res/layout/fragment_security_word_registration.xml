<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/security_word_registration_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/security_word_registration_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/security_word_registration_back_arrow_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.06" />

            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_back_arrow"
                app:layout_constraintStart_toEndOf="@+id/security_word_registration_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/security_word_registration_back_arrow_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/security_word_registration_logo_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.13" />

            <ImageView
                android:id="@+id/security_word_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_small"
                app:srcCompat="@drawable/ic_security_word_registration"
                app:layout_constraintEnd_toStartOf="@+id/security_word_registration_right_guideline"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/security_word_registration_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/security_word_registration_logo_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/security_word_registration_title_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.38" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_medium_small"
                app:layout_constraintEnd_toStartOf="@+id/security_word_registration_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/security_word_registration_left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/security_word_image">

                <TextView
                    android:id="@+id/security_word_current"
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/create_a_security_word"
                    android:textScaleX="1.05"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/security_word_please_create_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium_smaller"
                    android:layout_marginBottom="@dimen/margin_medium_smaller"
                    android:gravity="center"
                    android:text="@string/create_security_word"
                    android:textSize="@dimen/text_size_medium_15sp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/security_word_registration_card_left_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.06" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/security_word_registration_card_right_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.94" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/security_word_registration_card_inner_top_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.14" />

                        <TextView
                            android:id="@+id/security_word_error_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/too_short"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_smaller_11sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@+id/security_word_edit_text"
                            app:layout_constraintStart_toStartOf="@+id/security_word_registration_card_left_guideline"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/security_word_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toTopOf="@+id/security_word_registration_edittext_guideline"
                            app:layout_constraintEnd_toStartOf="@+id/security_word_registration_card_right_guideline"
                            app:layout_constraintStart_toStartOf="@+id/security_word_registration_card_left_guideline"
                            app:layout_constraintTop_toTopOf="@+id/security_word_registration_card_inner_top_guideline">

                            <EditText
                                android:id="@+id/security_word_registration_number_edittext"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:background="@drawable/rounded_button_white"
                                android:hint="@string/enter_security_word"
                                android:maxLength="28"
                                android:paddingStart="@dimen/padding_medium_smaller"
                                android:paddingLeft="@dimen/padding_medium_smaller"
                                android:paddingEnd="32dp"
                                android:paddingRight="32dp"
                                android:textCursorDrawable="@drawable/grey_cursor"
                                android:textSize="@dimen/text_size_small"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/security_word_registration_number_check"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/margin_medium_smaller_16dp"
                                android:layout_marginRight="@dimen/margin_medium_smaller_16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/security_word_registration_view"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/grey"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/security_word_registration_edittext_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.41" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/padding_medium_smaller"
                            app:layout_constraintEnd_toStartOf="@+id/security_word_registration_card_right_guideline"
                            app:layout_constraintStart_toEndOf="@+id/security_word_registration_card_left_guideline"
                            app:layout_constraintTop_toBottomOf="@+id/security_word_edit_text">

                            <Button
                                android:id="@+id/security_word_registration_button_skip"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/margin_smaller_7dp"
                                android:layout_marginRight="@dimen/margin_smaller_7dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_skip_2"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingVertical="@dimen/padding_medium_smaller"
                                android:text="@string/skip"
                                android:textColor="#F78D1B"
                                android:textSize="@dimen/text_size_medium" />

                            <Button
                                android:id="@+id/security_word_registration_button_done"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="7dp"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle_grey_done_2"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingVertical="@dimen/padding_medium_smaller"
                                android:text="@string/done"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/security_word_registration_button_bottom_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.87" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>