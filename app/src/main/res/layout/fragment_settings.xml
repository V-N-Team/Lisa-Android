<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin_huge"
                app:layout_constraintLeft_toRightOf="@id/left_settings_icon_gl"
                app:layout_constraintRight_toLeftOf="@id/right_settings_icon_gl"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings_icon" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_settings_icon_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_settings_icon_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <TextView
                android:id="@+id/settings_text_first"
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_small"
                android:text="@string/settings"
                app:layout_constraintTop_toBottomOf="@id/settings_icon" />

            <TextView
                android:id="@+id/settings_text_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_small"
                android:gravity="center"
                android:text="@string/customize_your_account"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/settings_text_first"
                app:srcCompat="@drawable/ic_settings" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_small"
                android:background="@drawable/settings_bg"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/start_vertical_gl"
                app:layout_constraintRight_toLeftOf="@id/end_vertical_gl"
                app:layout_constraintTop_toBottomOf="@id/settings_text_second">

                <LinearLayout
                    android:id="@+id/change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_lock" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/WalletMenuItemStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:text="@string/change_pin" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_small"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/imageViewLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_france_flag" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/wallet_transfer_friend"
                            style="@style/WalletMenuItemStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:text="@string/change_language" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"

                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/security_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_security_word" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/WalletMenuItemStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:text="@string/security_word" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_small"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_notification_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingHorizontal="@dimen/padding_medium_small"
                            android:text="@string/notification"
                            android:textColor="@color/walletGrey"
                            android:textSize="@dimen/text_size_medium_large" />

                        <CheckBox
                            android:id="@+id/notification_chb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_small"
                            android:background="@drawable/checkbox_selector_rounded"
                            android:button="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_small"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_faceid_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingHorizontal="@dimen/padding_medium_small"
                            android:text="Enable Face ID"
                            android:textColor="@color/walletGrey"
                            android:textSize="@dimen/text_size_medium_large" />

                        <CheckBox
                            android:id="@+id/enable_face_id_chb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_small"
                            android:background="@drawable/checkbox_selector_rounded"
                            android:button="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_medium_small"
                            android:background="@color/walletStroke" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_medium_smaller"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/padding_smaller"
                            app:srcCompat="@drawable/ic_touch_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_medium_small"
                            android:layout_toStartOf="@+id/enable_touch_id_chb"
                            android:fontFamily="@font/roboto_regular"
                            android:maxLines="1"
                            android:paddingStart="@dimen/padding_medium_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:text="@string/enable_touch_id"
                            android:textColor="@color/walletGrey"
                            android:textSize="@dimen/text_size_medium_large"
                            app:autoSizeMaxTextSize="@dimen/text_size_medium_large"
                            app:autoSizeTextType="uniform" />

                        <CheckBox
                            android:id="@+id/enable_touch_id_chb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_medium_small"
                            android:background="@drawable/checkbox_selector_rounded"
                            android:button="@null" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_vertical_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_vertical_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />


            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toEndOf="@+id/start_vertical_gl"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>