<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/terms_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/terms_registration_back_arrow_guideline"
        app:srcCompat="@drawable/ic_back_arrow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/terms_registration_logo_bot_guideline"
        app:layout_constraintEnd_toStartOf="@+id/terms_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/terms_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/terms_registration_logo_guideline"
        app:srcCompat="@drawable/ic_term_registration" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_logo_bot_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_title_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <TextView
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_agreement"
        android:textScaleX="1.05"
        app:layout_constraintEnd_toStartOf="@+id/terms_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/terms_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/terms_registration_title_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/you_must_confirm_that_you_agree_to_the_n_terms_and_conditions_to_continue"
        app:autoSizeMaxTextSize="@dimen/text_size_medium_15sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/terms_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/terms_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/terms_registration_text_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_subtitle_bot_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/terms_registration_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/terms_registration_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/terms_registration_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/terms_registration_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.12" />

            <CheckBox
                android:id="@+id/terms_registration_terms_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:button="@drawable/checkbox_selector"
                android:lineSpacingMultiplier="1.1"
                app:layout_constraintStart_toEndOf="@+id/terms_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/terms_registration_card_inner_top_guideline" />

            <TextView
                android:id="@+id/terms_registration_terms_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:gravity="center|start"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="2"
                android:text="@string/i_am_agree_with_the_tearms_of_service"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium_small"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/terms_registration_terms_checkbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/terms_registration_terms_checkbox"
                app:layout_constraintTop_toTopOf="@+id/terms_registration_terms_checkbox" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_top_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.36" />

            <CheckBox
                android:id="@+id/terms_registration_policy_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:button="@drawable/checkbox_selector"
                app:layout_constraintEnd_toStartOf="@+id/terms_registration_policy_textview"
                app:layout_constraintStart_toEndOf="@+id/terms_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/terms_registration_card_top_middle_guideline" />

            <TextView
                android:id="@+id/terms_registration_policy_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="@string/i_am_agree_with_the_privacy_policy"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium_small"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/terms_registration_policy_checkbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/terms_registration_policy_checkbox"
                app:layout_constraintTop_toTopOf="@+id/terms_registration_card_top_middle_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.61" />

            <Button
                android:id="@+id/terms_registration_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_grey"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/terms_registration_card_inner_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/terms_registration_card_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/terms_registration_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/terms_registration_card_middle_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/terms_registration_card_inner_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.88" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terms_registration_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

</androidx.constraintlayout.widget.ConstraintLayout>