<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ht.lisa.app.ui.registration.MobileRegistrationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_back_arrow_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_back_arrow_guideline"
        app:srcCompat="@drawable/ic_back_arrow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_card_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/transfer_friend_add_amount_card_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/transfer_friend_add_amount_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_card_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/amount_transfer_bg">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_card_left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_card_right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_card_inner_top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.55" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_smaller"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:text="@string/transaction_balance"
                android:textColor="@color/white"
                android:visibility="visible"
                app:autoSizeMaxTextSize="@dimen/text_size_medium_small"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/transfer_friend_add_amount_card_inner_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/transfer_friend_add_amount_card_left_guideline"
                app:layout_constraintRight_toRightOf="@+id/mid_gl"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mid_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/transfer_friend_add_amount_balance_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible"
                app:autoSizeMaxTextSize="@dimen/text_size_bigger"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/transfer_friend_add_amount_card_inner_guideline"
                app:layout_constraintLeft_toLeftOf="@id/mid_gl"
                app:layout_constraintRight_toRightOf="@+id/transfer_friend_add_amount_card_right_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_card_inner_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.17" />

            <ImageView
                android:id="@+id/transfer_friend_add_amount_avatar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_friend_add_amount_bottom_avatar_guideline"
                app:layout_constraintEnd_toStartOf="@+id/transfer_friend_add_amount_avatar_guideline"
                app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_phone_guideline"
                app:srcCompat="@drawable/ic_friend" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_avatar_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.16" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_name_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_bottom_avatar_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.49" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_phone_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/share_money_to"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_name_guideline" />

            <TextView
                android:id="@+id/transfer_friend_add_amount_balance_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_smaller"
                android:layout_marginLeft="@dimen/margin_smaller"
                android:text="@string/_509_"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/text_size_medium_15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_friend_add_amount_bottom_avatar_guideline"
                app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_avatar"
                app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_phone_guideline" />

            <TextView
                android:id="@+id/transfer_friend_add_amount_balance_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exceeded_amount"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_smaller_11sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/transfer_friend_add_amount_card_inner_top_guideline"
                app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_card_left_guideline" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transfer_friend_add_amount_edit_phone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/transfer_friend_add_amount_edittext_guideline"
                app:layout_constraintEnd_toStartOf="@+id/transfer_friend_add_amount_card_right_guideline"
                app:layout_constraintStart_toStartOf="@+id/transfer_friend_add_amount_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_card_inner_top_guideline">

                <EditText
                    android:id="@+id/transfer_friend_add_amount_number_edittext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_button_white"
                    android:hint="@string/enter_add_amount_transfer"
                    android:inputType="numberDecimal"
                    android:maxLength="28"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:textCursorDrawable="@drawable/grey_cursor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/transfer_friend_add_amount_number_check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/htg"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/transfer_friend_add_amount_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_edittext_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.67" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_card_middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.78" />

            <Button
                android:id="@+id/transfer_friend_add_amount_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_grey"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/transfer_friend_add_amount_button_bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/transfer_friend_add_amount_card_right_guideline"
                app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_card_left_guideline"
                app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_card_middle_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/transfer_friend_add_amount_button_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.93" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/transfer_friend_add_amount_service_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:gravity="center|start"
        android:maxLines="2"
        android:text="@string/i_am_agree_with_the_tearms_of_service"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_medium_small"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/transfer_friend_add_amount_service_checkbox"
        app:layout_constraintEnd_toEndOf="@+id/transfer_friend_add_amount_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_service_checkbox"
        app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_service_checkbox" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_card_top_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />

    <CheckBox
        android:id="@+id/transfer_friend_add_amount_service_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium_small"
        android:button="@drawable/checkbox_selector"
        app:layout_constraintStart_toEndOf="@+id/transfer_friend_add_amount_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/transfer_friend_add_amount_card_top_middle_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/transfer_friend_add_amount_card_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />
</androidx.constraintlayout.widget.ConstraintLayout>
