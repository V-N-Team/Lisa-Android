                                    android:layout_width="40dp"
                                    android:layout_height="10dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/shadow_loto" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/winning_numbers_past_draw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium_smaller"
                        android:background="@drawable/last_numbers_bot_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/padding_medium_smaller">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/search_for_past_draws"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium_small" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginLeft="@dimen/margin_small"
                            app:srcCompat="@drawable/ic_note" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F9F9F9"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/game_result_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_medium_27dp"
                            android:layout_marginTop="@dimen/margin_medium_27dp"
                            android:layout_marginBottom="@dimen/margin_medium_small_21dp"
                            android:fontFamily="@font/montserrat_extra_bold"
                            android:text="@string/games_results_ny"
                            android:textColor="@color/gamesResultsTextColor"
                            android:textSize="@dimen/text_size_big" />


                        <LinearLayout
                            android:id="@+id/games_results_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_medium_small"
                            android:orientation="vertical" />

                        <GridLayout
                            android:id="@+id/games_results_grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_marginHorizontal="@dimen/margin_medium_small" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_gravity="bottom"
                    android:background="#F9F9F9" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>