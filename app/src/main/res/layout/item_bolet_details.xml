<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_medium_smaller"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bolet_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_medium"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bolet_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bolet_middle_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bolet_right_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bolet_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_sun"
        app:layout_constraintStart_toStartOf="@id/bolet_left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_bolet_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="50X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_bolet_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="20X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_bolet_1" />

    <TextView
        android:id="@+id/day_bolet_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="10X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_bolet_2" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/night_values_group_bolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="night_image_bolet" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/evening_values_group_bolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="evening_image_bolet, evening_bolet_1, evening_bolet_2, evening_bolet_3" />

    <ImageView
        android:id="@+id/evening_image_bolet"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_evening_draw"
        app:tint="@color/eveningColor"
        app:layout_constraintStart_toStartOf="@id/bolet_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/evening_bolet_1" />

    <TextView
        android:id="@+id/evening_bolet_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_large"
        android:fontFamily="@font/roboto_medium"
        android:text="50X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_bolet_3" />

    <TextView
        android:id="@+id/evening_bolet_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="20X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_bolet_1" />

    <TextView
        android:id="@+id/evening_bolet_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="10X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_bolet_2" />

    <ImageView
        android:id="@+id/night_image_bolet"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_moon"
        app:layout_constraintStart_toStartOf="@id/bolet_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/night_bolet_1" />

    <TextView
        android:id="@+id/night_bolet_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_large"
        android:fontFamily="@font/roboto_medium"
        android:text="50X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_bolet_3" />

    <TextView
        android:id="@+id/night_bolet_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="20X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/night_bolet_1" />

    <TextView
        android:id="@+id/night_bolet_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/roboto_medium"
        android:text="10X"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="@id/bolet_middle_end_guideline"
        app:layout_constraintStart_toStartOf="@id/bolet_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/night_bolet_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
