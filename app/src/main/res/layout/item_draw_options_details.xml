<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_medium_smaller"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/draw_option_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_medium"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/draw_option_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@id/draw_option_left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sun" />

    <TextView
        android:id="@+id/day_draw_option_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_draw_option_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_draw_option_1" />

    <TextView
        android:id="@+id/day_draw_option_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_draw_option_2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/night_values_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="night_image_draw_options" />

    <ImageView
        android:id="@+id/evening_image_draw_options"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        app:tint="@color/eveningColor"
        app:layout_constraintStart_toStartOf="@id/draw_option_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/evening_draw_option_1"
        app:srcCompat="@drawable/ic_evening_draw" />

    <TextView
        android:id="@+id/evening_draw_option_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_large"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/day_draw_option_3" />

    <TextView
        android:id="@+id/evening_draw_option_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_draw_option_1" />

    <TextView
        android:id="@+id/evening_draw_option_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_draw_option_2" />

    <ImageView
        android:id="@+id/night_image_draw_options"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="@id/draw_option_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/night_draw_option_1"
        app:srcCompat="@drawable/ic_moon" />

    <TextView
        android:id="@+id/night_draw_option_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_large"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/evening_draw_option_3" />

    <TextView
        android:id="@+id/night_draw_option_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/night_draw_option_1" />

    <TextView
        android:id="@+id/night_draw_option_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_smaller"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/text_size_medium_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/draw_option_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/night_draw_option_2" />

</androidx.constraintlayout.widget.ConstraintLayout>