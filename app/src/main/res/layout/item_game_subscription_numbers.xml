<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_subscription_numbers_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_smaller"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_small_8dp">

        <TextView
            android:id="@+id/game_subscription_number_1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium_smaller_14dp"
            android:layout_marginLeft="@dimen/margin_medium_smaller_14dp"
            android:gravity="center"
            android:paddingHorizontal="2dp"
            android:paddingVertical="@dimen/padding_smaller_3dp"
            android:text="333"
            android:textColor="@color/gamesGrey"
            android:textSize="@dimen/text_size_medium_small"/>

        <TextView
            android:id="@+id/game_subscription_number_2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/margin_medium_smaller_14dp"
            android:layout_toEndOf="@id/game_subscription_number_1"
            android:layout_toRightOf="@id/game_subscription_number_1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_smaller"
            android:paddingVertical="@dimen/padding_smaller_3dp"
            android:text="33"
            android:textColor="@color/gamesGrey"
            android:textSize="@dimen/text_size_medium_small"/>

        <TextView
            android:id="@+id/game_subscription_number_3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/game_subscription_number_2"
            android:layout_toRightOf="@id/game_subscription_number_2"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_smaller"
            android:paddingVertical="@dimen/padding_smaller_3dp"
            android:text="33"
            android:textColor="@color/gamesGrey"
            android:textSize="@dimen/text_size_medium_small" />

        <TextView
            android:id="@+id/ticket_draw_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_toLeftOf="@id/game_subscription_checkbox"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="NY"
            android:textColor="@color/drawNight" />

        <CheckBox
            android:id="@+id/game_subscription_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_medium_smaller_14dp"
            android:layout_marginRight="@dimen/margin_medium_smaller_14dp"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>