<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_list_lotto5jr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="-10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:background="#1E4397"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_lotto5jr_mask" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/game_list_boloto_image_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/game_list_boloto_message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/game_list_boloto_message_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardBackgroundColor="#5E72ED"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/game_list_boloto_image_bottom"
        app:layout_constraintEnd_toStartOf="@+id/game_list_boloto_message_right"
        app:layout_constraintStart_toStartOf="@+id/game_list_boloto_message_left"
        app:layout_constraintTop_toBottomOf="@+id/game_list_boloto_message">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small">

            <ht.lisa.app.ui.component.AutoResizeTextView
                android:id="@+id/game_list_lotto5jr_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/margin_smaller_3dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingBottom="@dimen/padding_small"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium_15sp"
                android:visibility="visible" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/game_list_boloto_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_extra_bold"
        android:paddingStart="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:text="@string/jackpot"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_large_19sp"
        app:layout_constraintBottom_toTopOf="@+id/game_list_boloto_message_top"
        app:layout_constraintStart_toStartOf="@+id/game_list_boloto_message_left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/game_list_boloto_message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/game_list_boloto_image_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

</androidx.constraintlayout.widget.ConstraintLayout>