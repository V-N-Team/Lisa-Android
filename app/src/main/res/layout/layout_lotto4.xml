            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_27dp"
            android:layout_marginTop="@dimen/margin_medium_27dp"
            android:layout_marginEnd="@dimen/margin_medium_27dp">

            <TextView
