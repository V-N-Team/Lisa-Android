<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/menu_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="30dp"
        app:srcCompat="@drawable/ic_facebook_menu" />

    <ImageView
        android:id="@+id/menu_insta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="30dp"
        app:srcCompat="@drawable/ic_insta_menu" />

    <ImageView
        android:id="@+id/menu_youtube"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="30dp"
        app:srcCompat="@drawable/ic_youtube_menu" />

    <ImageView
        android:id="@+id/menu_twitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="30dp"
        app:srcCompat="@drawable/ic_twitter_menu" />
</LinearLayout>