            android:importantForAutofill="no"
            android:maxLength="1"
            tools:ignore="LabelFor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/inactiveBG" />
    </FrameLayout>

</LinearLayout>
