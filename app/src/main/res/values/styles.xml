<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/grey</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:windowBackground">@color/defaultBg</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>


    <style name="DatePicker">
        <item name="android:textColorPrimary">@color/darkGrey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/buttonOrange</item>
    </style>

    <style name="TitleOrangeTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/buttonOrange</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/grey_cursor</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="EditTextVerificationStyle">
        <item name="android:textCursorDrawable">@drawable/grey_cursor</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_medium_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium_small</item>
        <item name="android:paddingEnd">@dimen/padding_medium_small</item>
        <item name="android:paddingRight">@dimen/padding_medium_small</item>
        <item name="android:textColor">@color/walletGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WalletMenuItemStyle" parent="MenuItemStyle">
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="ForgotPinItemStyle" parent="MenuItemStyle">
        <item name="android:paddingStart">@dimen/padding_medium_smaller</item>
        <item name="android:paddingLeft">@dimen/padding_medium_smaller</item>
        <item name="android:paddingEnd">@dimen/padding_medium_smaller</item>
        <item name="android:paddingRight">@dimen/padding_medium_smaller</item>
    </style>

    <style name="PinDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowBackground">@color/defaultBg</item>
        <!-- We do not want to change the status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
